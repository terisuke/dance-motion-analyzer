# =====================================
# Dance Motion Analyzer - Environment Variables Template
# =====================================
# Copy this file and create appropriate .env files in frontend and backend directories
# DO NOT commit actual .env files with real values to version control

# =====================================
# Frontend (.env.local in frontend/)
# =====================================
# API Configuration
VITE_API_URL=http://localhost:8000
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# =====================================
# Backend (.env in backend/)
# =====================================
# Application
APP_NAME="Dance Motion Analyzer"
DEBUG=False

# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Security
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dance_analyzer

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
ANALYSIS_RATE_LIMIT_PER_MINUTE=10

# =====================================
# Docker Compose (optional .env in root)
# =====================================
POSTGRES_USER=dance_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=dance_analyzer
REDIS_PASSWORD=your_redis_password